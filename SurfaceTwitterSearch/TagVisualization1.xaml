<s:TagVisualization x:Class="SurfaceTwitterSearch.TagVisualization1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="TagVisualization1_Loaded">
    <Grid Height="149" Width="143">
        <Rectangle RadiusY="10" RadiusX="10" Stroke="#FF878787" StrokeThickness="2">
        	<Rectangle.Fill>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="#FFFFB151" Offset="0"/>
        			<GradientStop Color="#FF915001" Offset="1"/>
        		</LinearGradientBrush>
        	</Rectangle.Fill>
        </Rectangle>
        <s:SurfaceTextBox Height="23" HorizontalAlignment="Left" Margin="12,55,0,0" x:Name="surfaceTextBox1" VerticalAlignment="Top" Width="120" />
        <s:SurfaceButton Content="Find Tweets" Height="23" HorizontalAlignment="Left" Margin="11,99,0,0" x:Name="surfaceButton1" VerticalAlignment="Top" Width="120" Click="surfaceButton1_Click" />
        <TextBlock Height="21" Margin="12,35,12,0" TextWrapping="Wrap" Text="Enter Search Criteria:" VerticalAlignment="Top"/>
        <Image Margin="-34.046,-33,0,0" Source="Resources/snooping magnifying glass red.png" Stretch="Fill" HorizontalAlignment="Left" Width="100.328" Height="100" VerticalAlignment="Top"/>
    </Grid>
</s:TagVisualization>
