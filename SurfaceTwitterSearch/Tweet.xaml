<UserControl x:Class="SurfaceTwitterSearch.Tweet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Viewbox Margin="-5,-5,-5,-5">
        <Grid Width="300" Height="150">
            <Rectangle Stroke="#FF878787" RadiusX="10" RadiusY="10" StrokeThickness="2">
            	<Rectangle.Fill>
            		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            			<GradientStop Color="#FF434A8B" Offset="0"/>
            			<GradientStop Color="#FF1F2341" Offset="1"/>
            		</LinearGradientBrush>
            	</Rectangle.Fill>
            </Rectangle>
            <Image Height="66" HorizontalAlignment="Left" Margin="6,6,0,0" x:Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="62" />
            <Label Foreground="White" Content="Label" Height="40" HorizontalAlignment="Left" Margin="75,21,0,0" x:Name="label1" VerticalAlignment="Top" Width="214" />
            <TextBlock Foreground="White" Height="72" HorizontalAlignment="Left" Margin="7,78,0,0" x:Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" Width="283" />
        </Grid>
    </Viewbox>

</UserControl>
